@model TourAgency.Models.Manager
@{
    ViewBag.Title = "Добавление менеджера";
}
<div align=center >
    <form asp-action="ManagerAdd" asp-controller="Manager" method="post" onreset="return OnReset()">
        <div style="display:none">
            <input type="number" asp-for="ManagerID" />
        </div>
        
        <table class="minitable">
            <tr>
                <th colspan=2>@ViewBag.Title</th>
            </tr>
            <tr>
                <td colspan="2"><div class="validation" asp-validation-summary="ModelOnly"></div>
            </tr>
            <tr>
                <td style="text-align:right"><label asp-for="ManagerName"></label>
                <td style="text-align:left">
                    <div>
                        <input type="text" asp-for="ManagerName" style="width: 200px" onfocus="HideError()" />
                        <span asp-validation-for="ManagerName"></span>
                    </div>
            </tr>
            <tr>
                <td style="text-align:right"><label asp-for="ManagerSurname"></label>
                <td style="text-align:left">
                    <div>
                        <input type="text" asp-for="ManagerSurname" style="width: 200px" onfocus="HideError()" />
                        <span asp-validation-for="ManagerSurname"></span>
                    </div>
            </tr>
            <tr>
                <td style="text-align:right"><label asp-for="Prime"></label>
                <td style="text-align:left"><input type="number" step="5" min="5" max="45" value="10" asp-for="Prime" style="width: 70px">
            </tr>
            <tr>
                <td style="text-align:right"><label asp-for="CountryID"></label>
                <td style="text-align:left"><select asp-for="CountryID" asp-items="ViewBag.Countries"></select>
            </tr>
            <tr>
                <td style="text-align:right"><label asp-for="ManagerLogin"></label>
                <td style="text-align:left">
                    <div>
                        <input type="text" asp-for="ManagerLogin" style="width: 200px" onfocus="HideError()" />
                        <span asp-validation-for="ManagerLogin"></span>
                    </div>
            </tr>
            <tr>
                <td colspan=2>
                    <button type="submit" value='Добавить'><img src="~/applybutton.png">Добавить</button>
                    <button type="reset" value="Сброс" style="margin:5px"><img src='~/cancelbutton.jpg'>Сброс</button>
                </td>
            </tr>
        </table>
    </form>
</div>

